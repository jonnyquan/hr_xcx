<template name="jobRecord">
    <view class="positionName">
      <text class="text font-34">{{positionName}}</text>
      <text class="status  {{currentStatus=='已淘汰'?'status_fail':''}}">{{currentStatus}}</text>
    </view>
    <view class="companyName">
      <image class="company_icon" src="/images/company3.png"></image>
      <text class="company_text font-gray-26">{{companyName}}</text>
    </view>
    <view class="applyTime font-gray-26">申请时间：{{createTime?createTime:updateTime}}</view>
</template>  