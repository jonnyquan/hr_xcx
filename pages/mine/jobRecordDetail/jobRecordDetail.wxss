/* step wrap*/
.stepWrap {
    width: 100%;
    position: relative;
    border-bottom:1rpx solid #e5e5e5;
  }

  .step-item {
    width: 226rpx;
    text-align: center;
    display: inline-block;
    overflow: visible;
  }

  .active .item-tail, .item-tail {
    background: #5aa2e7 none repeat scroll 0 0;
    height: 1px;
    position: relative;  
    top: 24rpx;
    left: -88rpx; 
    width: 178rpx;
  }

  .item-tail {
    background: #ccc none repeat scroll 0 0;
  }

  .step-item:nth-child(1) .item-tail {
    background: none;
  }

  .step-item-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #C9C9C9 ;
    font-size: 30rpx;
    color: #fff;
    width: 48rpx;
    height: 48rpx;
    margin: 0 auto;
    border-radius: 50%;
  }

  .active .step-item-icon {
    background: #5aa2e7;
    border: none;
  }

  .step-item-name {
    color: #999;
    margin: 20rpx 0;
    font-size:32rpx;
  }
  .active .step-item-name{
    color: #000000;
  }
